<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Description>ImGui Framework Library</Description>
    <Company>zwcloud</Company>
    <Product>zwcloud.ImGui</Product>
    <Copyright>Copyright (c) 2016-2017 Zou Wei, https://zwcloud.net/, zwcloud@hotmail.com</Copyright>
    <PackageProjectUrl>https://zwcloud.net/#project/imgui</PackageProjectUrl>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <SignAssembly>False</SignAssembly>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ImageSharp" Version="1.0.0-alpha9-00175" />
    <PackageReference Include="System.ComponentModel.Primitives" Version="4.3.0" />
    <PackageReference Include="System.Diagnostics.Contracts" Version="4.3.0" />
    <PackageReference Include="System.Diagnostics.Process" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Serialization.Formatters" Version="4.3.0" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0-preview2-25405-01" />
    <PackageReference Include="System.Xml.XmlSerializer" Version="4.3.0" />
  </ItemGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Control\tobefixed\**" />
    <EmbeddedResource Remove="Control\tobefixed\**" />
    <None Remove="Control\tobefixed\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Control\Box.cs" />
    <Compile Remove="Control\CollapsingHeader.cs" />
    <Compile Remove="Control\ColorField.cs" />
    <Compile Remove="Control\GUIBehavior.cs" />
    <Compile Remove="Control\HoverButton.cs" />
    <Compile Remove="Control\Image.cs" />
    <Compile Remove="Control\PolygonButton.cs" />
    <Compile Remove="Control\Slider.cs" />
    <Compile Remove="Control\Toggle.cs" />
    <Compile Remove="Control\ToggleButton.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Control\Window.*.cs">
      <DependentUpon>Control\Window.cs</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>